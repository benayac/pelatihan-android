<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDataActivity"
    android:background="#EFEFEF">

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75000000"
        android:translationZ="3dp"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="true"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/countryDataCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginVertical="24dp">

            <ImageView
                android:id="@+id/countryFlagImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/countryNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/countryFlagImage"
                android:text="The Country Chosen"
                android:textAlignment="center"
                android:layout_marginTop="18dp"
                android:textSize="32sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Date: xx"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dataCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/countryDataCardView"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="18dp"
        app:cardCornerRadius="14dp">

        <TextView
            android:id="@+id/noDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Data"
            android:textSize="48sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="18dp"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/allDataConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <TextView
                android:id="@+id/confirmedTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Confirmed:"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/data1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/confirmedTitleTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/deathTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/data1TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Deaths:"
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/data2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/deathTitleTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/recoveredTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/data2TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Recovered:"
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/data3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recoveredTitleTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/activeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/data3TextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:text="Active:"
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/data4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activeTitleTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="32sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>